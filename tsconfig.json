{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "target": "ES6",
    "module": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "jsx": "react-jsx",
    "types": ["react", "react-dom"],
    "strict": true,
    "composite": true,
    "noEmit": false,
    "skipLibCheck": true,
    "baseUrl": "./src",
    "ignoreDeprecations": "6.0",
    "paths": {
      "@lib/*": ["lib/*"]
    }
  },
  "include": ["src"]
}
